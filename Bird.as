package {	import flash.display.MovieClip;	import flash.events.Event;	import Crosshair;	import flash.events.MouseEvent;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class Bird extends MovieClip	{		private var left:Number;		private var right:Number;		private var top:Number;		private var bottom:Number;		public var dx:Number;		public var dy:Number;		public var dead:Boolean;		public var shot:Boolean;		var respawnTime:Number		public function Bird()		{			x = 100;			y = 100;			dx = 4;			dy = 4;						addEventListener(Event.ENTER_FRAME, moveBird);			//when true, triggers a randomization of position			//set true initially to randomize positions when spawning			dead = true;		}		public function moveBird(e:Event):void		{			/*overly convoluted legacy code from the tutorial			I couldn't be bothered to change it though; no point			in doing so as it works anyway*/						//define screen boundaries			left = width / 2;			right = stage.stageWidth - width / 2;			top = height / 2;			bottom = (stage.stageHeight - height / 2) - 50;			//reverse x-direction when bouncing against side walls			if (x + dx < left || x + dx > right)			{				dx *=  -1;				//flip the sprite				this.scaleX *= -1;			}			//reverse y-direction when bouncing against top/bot walls			if (y + dy < top || y + dy > bottom)			{				dy *=  -1;			}			if (dead == true)			{				//randomize the bird's position for when it respawns				x = Math.random()*(right-left-width-20)+left+width/2+10;				y = Math.random()*(bottom-top-height-20)+top+height/2+10;				dead = false;				shot = false;			}			x +=  dx;			y +=  dy;		}	}}