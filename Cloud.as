package  {	import flash.events.Event;	import flash.display.MovieClip;	import Math;		public class Cloud extends MovieClip {		private var dx:Number;		public function Cloud() {			x = -1000;			y = 0;			dx = 0;			addEventListener(Event.ENTER_FRAME, moveCloud);		}				public function moveCloud(e:Event) {			//clouds move right-to-left across the screen			x -= dx;			//if they go offscreen, reset them offscreen on the			//left side at a random y-position and with a random speed			if (x <= -stage.stageWidth){				x=Math.random()*stage.stageWidth+stage.stageWidth+width;				y=Math.random()*stage.stageHeight/4;				dx=Math.random()*3+1;			}		}	}	}